<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:fontFamily">"Roboto"</item>

    </style>

    <style name="Heading">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">"Roboto"</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
    </style>

    <style name="SubHeading">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">"Roboto"</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sub_heading_text_size</item>
    </style>

    <style name="Label">
        <item name="android:textColor">@color/primaryFontColor</item>
        <item name="android:fontFamily">"Roboto"</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="Content">
        <item name="android:textColor">@color/primaryFontColor</item>
        <item name="android:fontFamily">"Roboto"</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_text_size</item>

    </style>

    <style name="smallContent">
        <item name="android:fontFamily">"Roboto"</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_content_text_size</item>
        <item name="android:textColor">@color/secondaryFontColor</item>

    </style>


    <style name="Button">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:fontFamily">"Roboto"</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/label_text_size</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
