<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SubHeading"
            android:id="@+id/report_boy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/secondary_margin"
            android:layout_marginTop="@dimen/secondary_margin"
            android:text="BoyName"
            android:padding="@dimen/no_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/report_boy_age"
            style="@style/Content"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="@dimen/no_padding"
            android:text="Aged 25 - 30yrs"
            android:textColor="@color/secondaryFontColor"
            app:layout_constraintStart_toStartOf="@+id/report_boy_name"
            app:layout_constraintTop_toBottomOf="@+id/report_boy_name" />

        <TextView
            android:id="@+id/report_girl_name"
            style="@style/SubHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/secondary_margin"
            android:padding="@dimen/no_padding"
            android:text="GirlName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/report_boy_name" />

        <TextView
            android:id="@+id/report_girl_age"
            style="@style/Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/no_padding"
            android:text="Aged 18 - 24yrs"
            android:textColor="@color/secondaryFontColor"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/report_girl_name"
            app:layout_constraintTop_toTopOf="@+id/report_boy_age" />

        <TextView
            android:id="@+id/report_date"
            style="@style/Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/no_padding"
            android:text="Dec 22, 2017"
            android:textColor="@color/secondaryFontColor"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/report_girl_name"
            app:layout_constraintTop_toTopOf="@+id/report_test_type" />

        <TextView
            android:id="@+id/report_test_type"
            style="@style/Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="@dimen/no_padding"
            android:text="Test Type"
            android:textColor="@color/secondaryFontColor"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/report_boy_name"
            app:layout_constraintTop_toBottomOf="@+id/report_boy_age" />

        <View
            android:id="@+id/report_name_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@color/grayColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/report_date" />



        <View
            android:id="@+id/report_summary_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@color/grayColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/result_insights_for_owner_text" />

        <TextView
            android:id="@+id/report_compatibility_score_heading_label"
            style="@style/Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:text="Compatibility Score Heading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/report_name_line" />

        <ImageView
            android:id="@+id/report_score_circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:padding="@dimen/no_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/report_compatibility_score_heading_label"
            app:srcCompat="@drawable/blue_rectangle" />

        <TextView
            android:id="@+id/report_compatibility_score"
            style="@style/Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:padding="@dimen/no_padding"
            android:text="50"
            android:textColor="@color/whiteColor"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/report_score_circle"
            app:layout_constraintEnd_toEndOf="@+id/report_score_circle"
            app:layout_constraintStart_toStartOf="@+id/report_score_circle"
            app:layout_constraintTop_toTopOf="@+id/report_score_circle" />

        <TextView
            android:id="@+id/report_compatibility_score_summary"
            style="@style/Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:padding="@dimen/no_padding"
            android:text="Compatibility Summary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/report_score_circle" />

        <View
            android:id="@+id/report_insights_for_owner_background"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@color/green_color"
            android:padding="@dimen/no_padding"
            app:layout_constraintTop_toBottomOf="@+id/report_compatibility_score_summary" />

        <TextView
            android:id="@+id/report_insights_for_owner_heading"
            style="@style/Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:padding="@dimen/no_padding"
            android:text="Insight for Owner"
            android:textColor="@color/whiteColor"
            app:layout_constraintBottom_toBottomOf="@+id/report_insights_for_owner_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/report_insights_for_owner_background"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/report_insights_for_owner_text"
            style="@style/Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:padding="@dimen/no_padding"
            android:text="Insights for Owner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/report_insights_for_owner_background" />

        <View
            android:id="@+id/report_insights_for_guest_background"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@color/blue_color"
            android:padding="@dimen/no_padding"
            app:layout_constraintTop_toBottomOf="@+id/report_insights_for_owner_text" />

        <TextView
            android:id="@+id/report_insights_for_guest_heading"
            style="@style/Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:padding="@dimen/no_padding"
            android:text="Insight for Owner"
            android:textColor="@color/whiteColor"
            app:layout_constraintBottom_toBottomOf="@+id/report_insights_for_guest_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/report_insights_for_guest_background"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/report_insights_for_guest_text"
            style="@style/Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:padding="@dimen/no_padding"
            android:text="Insights for Owner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/report_insights_for_guest_background" />

        <View
            android:id="@+id/report_advice_for_owner_background"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@color/green_color"
            android:padding="@dimen/no_padding"
            app:layout_constraintTop_toBottomOf="@+id/report_insights_for_guest_text" />

        <TextView
            android:id="@+id/report_advice_for_owner"
            style="@style/Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:padding="@dimen/no_padding"
            android:text="Advice for Owner"
            android:textColor="@color/whiteColor"
            app:layout_constraintBottom_toBottomOf="@+id/report_advice_for_owner_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/report_advice_for_owner_background" />

        <TextView
            android:id="@+id/report_advice_for_owner_text"
            style="@style/Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:padding="@dimen/no_padding"
            android:text="Advice for Owner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/report_advice_for_owner" />

        <View
            android:id="@+id/report_advice_for_guest_background"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@color/blue_color"
            android:padding="@dimen/no_padding"
            app:layout_constraintTop_toBottomOf="@+id/report_advice_for_owner_text" />

        <TextView
            android:id="@+id/report_advice_for_guest_heading"
            style="@style/Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:padding="@dimen/no_padding"
            android:text="Advice for Owner"
            android:textColor="@color/whiteColor"
            app:layout_constraintBottom_toBottomOf="@+id/report_advice_for_guest_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/report_advice_for_guest_background" />

        <TextView
            android:id="@+id/report_advice_for_guest_text"
            style="@style/Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:padding="@dimen/no_padding"
            android:text="Advice for Guest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/report_advice_for_guest_background" />

        <ImageView
            android:id="@+id/report_share_button"
            style="@style/Button"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/green_ripple_rectangle_button"
            android:padding="@dimen/primary_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/report_advice_for_guest_text"
            app:srcCompat="@drawable/ic_sharing_button" />

        <View
            android:id="@+id/report_advice_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="@dimen/secondary_margin"
            android:background="@color/grayColor"
            android:padding="@dimen/no_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/report_share_text" />

        <ImageView
            android:id="@+id/report_restart_button"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/red_ripple_round_button"
            app:srcCompat="@drawable/restart"
            android:padding="@dimen/primary_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/report_advice_line" />



        <ImageView
            android:id="@+id/report_feedback_button"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/blue_ripple_rectangle_button"
            android:padding="@dimen/primary_padding"
            android:src="@drawable/feedback"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/report_restart_button" />




        <ImageView
            android:id="@+id/report_reports_button"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/magenta_ripple_round_button"
            android:src="@drawable/ic_all_reports"
            android:padding="@dimen/primary_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/report_restart_button" />

        <TextView
            android:id="@+id/report_restart_text"
            style="@style/smallContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/new_test"
            app:layout_constraintEnd_toEndOf="@+id/report_restart_button"
            app:layout_constraintStart_toStartOf="@+id/report_restart_button"
            app:layout_constraintTop_toBottomOf="@+id/report_restart_button" />

        <TextView
            android:id="@+id/report_share_text"
            style="@style/smallContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/tell_a_friend"
            app:layout_constraintEnd_toEndOf="@+id/report_share_button"
            app:layout_constraintStart_toStartOf="@+id/report_share_button"
            app:layout_constraintTop_toBottomOf="@+id/report_share_button" />

        <TextView
            android:id="@+id/report_feedback_text"
            style="@style/smallContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/feedback"
            app:layout_constraintEnd_toEndOf="@+id/report_feedback_button"
            app:layout_constraintStart_toStartOf="@+id/report_feedback_button"
            app:layout_constraintTop_toBottomOf="@+id/report_feedback_button" />

        <TextView
            android:id="@+id/report_all_reports_text"
            style="@style/smallContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="@dimen/secondary_padding"
            android:text="@string/all_reports"
            app:layout_constraintEnd_toEndOf="@+id/report_reports_button"
            app:layout_constraintStart_toStartOf="@+id/report_reports_button"
            app:layout_constraintTop_toBottomOf="@+id/report_reports_button" />

        <TextView
            android:id="@+id/gender_testing_text"
            style="@style/SubHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="8dp"
            android:text="@string/feedback"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/report_restart_text"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>



</ScrollView>
